<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/form"
    tools:context=".MainActivity">

    <TextView
        style="@style/tvFormTitle"
        android:gravity="center"
        android:text="Shared Preferences storing" />

    <EditText
        android:id="@+id/et_value"
        style="@style/etForm"
        android:hint="write something..." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            style="@style/btnSharedPreferences"
            android:backgroundTint="@color/primary"
            android:onClick="sharedPreferences_OnClickSave"
            android:text="save" />

        <Button
            style="@style/btnSharedPreferences"
            android:backgroundTint="@color/primary_dark"
            android:onClick="sharedPreferences_OnClickRead"
            android:text="read" />

    </LinearLayout>

    <TextView
        style="@style/etForm"
        android:text="sharedPreferences stored:" />

    <TextView
        android:id="@+id/tv_shared_preferences"
        style="@style/tvFormTitle"
        android:gravity="center" />

</LinearLayout>