<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".TestamentActivity">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="48dp"
        android:background="@color/cardview_dark_background"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radioImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkedButton="@+id/firstImage"
                android:layout_gravity="center"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/firstImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/christian" />
                <RadioButton
                    android:id="@+id/secondImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ciber" />
            </RadioGroup>

            <Button
                style="@style/btnFormPrimary"
                android:layout_margin="8dp"
                android:onClick="onClickSaveImage"
                android:text="@string/save" />

            <Button
                style="@style/btnFormSecondary"
                android:layout_margin="8dp"
                android:onClick="onClickGoBack"
                android:text="@string/go_back" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>