<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/conductive_ripple"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/btn_add_song"
        style="@style/btn_media_player"
        android:background="@drawable/ic_add"
        android:onClick="addToList" />

    <TextView
        android:id="@+id/tv_song_name"
        style="@style/tv_song_name_on_music_player" />

    <TextView
        android:id="@+id/tv_song_duration"
        style="@style/tv_song_duration_on_music_player" />

    <LinearLayout style="@style/layout_btn_media_player">

        <ImageButton
            android:id="@+id/btn_previous_song"
            style="@style/btn_media_player"
            android:background="@drawable/ic_skip_previous" />

        <ImageButton
            android:id="@+id/btn_play_pause_song"
            style="@style/btn_media_player"
            android:onClick="onPlayPause"/>

        <ImageButton
            android:id="@+id/btn_next_song"
            style="@style/btn_media_player"
            android:background="@drawable/ic_skip_next" />

    </LinearLayout>

</LinearLayout>