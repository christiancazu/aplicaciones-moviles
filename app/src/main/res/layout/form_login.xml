<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/form">

    <ImageView
        style="@style/ivFormLogo"
        android:src="@drawable/utp" />

    <TextView
        style="@style/tvFormTitle"
        android:text="@string/app_name" />

    <EditText
        android:id="@+id/et_code"
        style="@style/etForm"
        android:drawableStart="@drawable/ic_person"
        android:hint="@string/user_code" />

    <EditText
        android:id="@+id/et_pwd"
        style="@style/etForm"
        android:drawableStart="@drawable/ic_lock"
        android:hint="@string/pwd"
        android:inputType="textPassword" />

    <Button
        style="@style/btnFormPrimary"
        android:onClick="signInOnClick"
        android:text="@string/btn_sign_in" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="16dp">

        <CheckBox
            android:id="@+id/cbx_remember_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:onClick="tvRememberMeOnClick"
            style="@style/tvFormSecondary"
            android:text="@string/remember_me" />

    </LinearLayout>

</LinearLayout>