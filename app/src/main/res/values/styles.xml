<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_light</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="colorPrimary">@color/primary</item>
    </style>

    <!-- form LinearLayout -->
    <style name="form">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/form_padding</item>
    </style>

    <!-- EditText on form -->
    <style name="et_form">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/et_form_margin</item>
        <item name="android:drawablePadding">@dimen/et_icon_padding</item>
    </style>

    <!-- Button on form base-->
    <style name="btn_form_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:layout_margin">@dimen/btn_form_margin</item>
    </style>

    <!-- Button primary -->
    <style name="btn_form_primary" parent="btn_form_base">
        <item name="android:background">@color/primary</item>
    </style>

    <!-- Button secondary -->
    <style name="btn_form_secondary" parent="btn_form_base">
        <item name="android:background">@color/primary_dark</item>
    </style>

    <!-- TextView on form base -->
    <style name="tv_form_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_title_height</item>
    </style>

    <!-- TextView title on form -->
    <style name="tv_form_title" parent="tv_form_base">
        <item name="android:textColor">@color/accent</item>
    </style>

    <!-- TextView primary on form -->
    <style name="tv_form_primary" parent="tv_form_base">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- TextView secondary on form -->
    <style name="tv_form_secondary" parent="tv_form_base">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- ImageView logo -->
    <style name="iv_form_logo">
        <item name="android:layout_width">@dimen/img_size_logo</item>
        <item name="android:layout_height">@dimen/img_size_logo</item>
    </style>

</resources>