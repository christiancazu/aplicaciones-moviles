<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_light</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="colorPrimary">@color/primary</item>
    </style>

    <style name="cv_song">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/cv_song_padding_content</item>
    </style>

    <style name="tv_song">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tv_song_name" parent="tv_song">
        <item name="android:textSize">@dimen/song_name_text_size</item>
    </style>

    <style name="tv_song_duration" parent="tv_song">
        <item name="android:textSize">@dimen/song_duration_text_size</item>
        <item name="android:layout_gravity">end|center_vertical</item>
    </style>

</resources>
