<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_light</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="colorPrimary">@color/primary</item>
    </style>

    <!-- form LinearLayout -->
    <style name="form">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/form_padding</item>
    </style>

    <!-- EditText on form -->
    <style name="etForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/et_form_margin</item>
        <item name="android:drawablePadding">@dimen/et_icon_padding</item>
    </style>

    <!-- Button on form base-->
    <style name="btnFormBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:layout_margin">@dimen/btn_form_margin</item>
    </style>

    <!-- Button primary -->
    <style name="btnFormPrimary" parent="btnFormBase">
        <item name="android:backgroundTint">@color/primary</item>
    </style>

    <!-- Button secondary -->
    <style name="btnFormSecondary" parent="btnFormBase">
        <item name="android:backgroundTint">@color/primary_dark</item>
    </style>

    <!-- TextView on form base -->
    <style name="tvFormBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tv_title_height</item>
    </style>

    <!-- TextView title on form -->
    <style name="tvFormTitle" parent="tvFormBase">
        <item name="android:textColor">@color/accent</item>
    </style>

    <!-- TextView primary on form -->
    <style name="tvFormPrimary" parent="tvFormBase">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- TextView secondary on form -->
    <style name="tvFormSecondary" parent="tvFormBase">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- ImageView logo -->
    <style name="ivFormLogo">
        <item name="android:layout_width">@dimen/img_size_logo</item>
        <item name="android:layout_height">@dimen/img_size_logo</item>
    </style>

    <!-- LinearLayout profile container (info & data) TextViews -->
    <style name="lLayoutInfoData">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- TextView profile info -->
    <style name="tvProfileBase">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- TextView profile info -->
    <style name="tvProfileInfo" parent="tvProfileBase">
        <item name="android:gravity">right</item>
    </style>

    <!-- TextView profile data -->
    <style name="tvProfileData" parent="tvProfileBase">
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

</resources>
